<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.fgliu.demo.MainActivity">

    <Button
        android:id="@+id/start_float_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="桌面弹窗" >
    </Button>

    <Button
        android:id="@+id/renren_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="简单滑动菜单" >
    </Button>

    <Button
        android:id="@+id/slider_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="通用滑动菜单" >
    </Button>

    <Button
        android:id="@+id/both_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="双向滑动菜单" >
    </Button>

    <Button
        android:id="@+id/switch_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="顶部滚动banner" >
    </Button>

    <Button
        android:id="@+id/frame_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="碎片化" >
    </Button>

    <Button
        android:id="@+id/tab_menu_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="底部菜单" >
    </Button>

    <Button
        android:id="@+id/contact_menu_window_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="通讯录" >
    </Button>

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="下拉刷新" >
    </Button>
</LinearLayout>
